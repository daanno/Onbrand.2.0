{
  "name": "act-2.0-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "ACT 2.0 - AI-powered brand management platform",
  "workspaces": [
    "brands/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "NODE_ENV=development turbo run dev --filter=act-frontend",
    "dev:staging": "NODE_ENV=staging turbo run dev --filter=act-frontend",
    "build": "NODE_ENV=production turbo run build",
    "build:staging": "NODE_ENV=staging turbo run build",
    "test": "turbo run test",
    "test:ui": "turbo run test:ui",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "playwright test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "type-check": "turbo run type-check",
    "qa": "turbo run type-check lint && pnpm format:check && turbo run test",
    "qa:fix": "turbo run type-check lint:fix && pnpm format"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "playwright": "^1.41.0",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.6.3",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
